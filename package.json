{
  "name": "puter-coding-agent",
  "displayName": "Puter Coding Agent",
  "description": "A coding assistant in VS Code using Puter's free AI APIs (Claude Opus 4.5 via Puter.js).",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [
    "onView:puterCodingAgent.chatView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "puter-coding-agent",
          "title": "Puter Agent",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "puter-coding-agent": [
        {
          "id": "puterCodingAgent.chatView",
          "name": "Coding Chat"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
